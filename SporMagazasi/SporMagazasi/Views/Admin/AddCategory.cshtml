    <div>
        <table>


            @using (Html.BeginForm())
            {
                <tr>
                    <td style="font-family:Calibri;font-weight:bold;font-size:15px;">@Html.Label("Kategori Adı")</td>
                    <td>@Html.TextBoxFor(x => x.CategoryName)</td>
                </tr>
               <tr>
                   <td style="font-family:Calibri;font-weight:bold;font-size:15px;">@Html.Label("Açıklama")</td>
                   <td>@Html.TextBoxFor(x => x.Description)</td>
               </tr>
                
               
           <tr>
               <td colspan="2" align="center"><input type="submit" value="Kaydet" name="name" /><td>
           </tr>
                
             
            }
