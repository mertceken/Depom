@model ETicaret.DLL.Urunler

@{
    ViewBag.Title = "UrunDetayIndex";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}



<div class="content-wrapper">
    <div class="col-md-8 offset-2">
        <div>
            <h4>
                <span class="label label-default" style="color:red">@Model.UrunAdi</span>
                Ürünün Detayı
            </h4>
            <hr />
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.UrunAdi)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.UrunAdi)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.UrunFiyat)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.UrunFiyat)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.UrunOlcuTanimi)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.UrunOlcuTanimi)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.UrunStok)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.UrunStok)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.UrunAciklama)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.UrunAciklama)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Markalar.MarkaAdi)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Markalar.MarkaAdi)
                </dd>

                <dt>
                    @*@Html.DisplayNameFor(model => model.Personeller.Adi)*@
                    <label> Personel @Html.DisplayNameFor(model => model.Personeller.Adi)</label>
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Personeller.Adi)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Kategoriler.KategoriAdi)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Kategoriler.KategoriAdi)
                </dd>

            </dl>
        </div>

        <!--**********************Ürün Resimleri alanı-->
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <h3>Ürün Resimleri</h3>
                </div>
                <!--******card-body-->
                <div class="card-body p-0 UrunResimleri">
                    @foreach (ETicaret.DLL.UrunResimleri item in Model.UrunResimleri)
                    {
                        <div class="UrunResim">
                            <img src="~/EklenenResimler/@item.Resim" alt="Alternate Text" />

                            <div class="btn btn-danger UrunSilBtn" urunresimid="@item.UrunResimleriID">Sil</div>
                        </div>
                    }
                </div>
                <!--******card-body end-->

            </div>

            <!--UrunController altında UrunFileUpload metodu için bir form tanımlıyoruz. Bu kısım resim eklemek için gereklidir. Bir post işlemi olacağından form tanımlamasına ihtiyacımız var -->
            <form action='@Url.Action("UrunFileUpload","Urun")' class="dropzone" id="dropForm">
                @Html.HiddenFor(model => model.UrunlerID)

                <input type="hidden" name="id" value="@Model.UrunlerID" />

            </form>

        </div>
        <!--**********************Ürün Resimleri alanı END-->

        <p>
            @*@Html.ActionLink("Ürün Resmi Ekle", "#", new { id = Model.UrunlerID },new { @class="btn btn-success"})*@

            @Html.ActionLink("Ürün listesine Dön", "UrunListesiView", null, new { @class = "btn btn-warning" })
        </p>
    </div>
</div>
@section css{

    <link href="~/Scripts/dropzone/dropzone.css" rel="stylesheet" />
    <style>
        .UrunResim div {
            bottom: 0.1px;
            right: 0.1px;
            position: absolute;/*Sil buttonun resim içinde konumu ayarladık*/
        }

        .UrunResim {
            width: 180px;
            height: 140px;
            float: left;
            margin:10px;
            position: relative;/*iç içe gösterir. Sil buttonunu her resmin üzerinde göstermesini sağladık*/
        }

            .UrunResim img {
                width: 100%;
                height: 100%;
            }
    </style>

}

