@model ETicaret.DLL.OlcuBirimleri
@using  ETicaret.BLL

@{
    ViewBag.Title = "OlcuBirimleriIndex";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
    OlcuBirimiManager olcMan = new OlcuBirimiManager();
}

<div class="content-wrapper">
    <h2>OlcuBirimleriIndex</h2>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h4>OlcuBirimleri</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(model => model.OlcuBirimiAdi, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.OlcuBirimiAdi, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.OlcuBirimiAdi, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Aciklama, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Aciklama, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Aciklama, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Create" class="btn btn-default" />
                </div>
            </div>
        </div>
    }
    @*<div>
            @Html.ActionLink("", "Index")
        </div>*@

    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Ölçü Birimleri Listesi</h3>
        </div>
        <!-- /.card-header -->
        <div class="card-body p-0">
            <table class="table table-condensed">
                <tr class="table-active">
                    <th >ID</th>
                    <th  >Adı</th>
                    <th style="text-align:left;width:90%;background-color:#808080" >Açıklama</th>

                    <th>Günceller</th>

                    <th>Sil</th>
                </tr>
                @foreach (var item in olcMan.OlcuBirimiListesi())
                {
                    <tr>
                        <td >@item.OlcuBirimleriID</td>
                        <td >@item.OlcuBirimiAdi</td>
                        <td style="text-align:left;width:90%;background-color:#c6c4c4" >@item.Aciklama</td>

                        <td >
                            @*<button class="btn btn-warning">Güncelle</button>*@
                            @Html.ActionLink("Güncelle", "OlcubirimiGuncelle", new { ID = item.OlcuBirimleriID })  @*style="text-align:left;width:10%"*@                               
                       
                        </td>
                        <td>
                            @Html.ActionLink("Sil", "OlcubirimiGuncelle", new { ID = item.OlcuBirimleriID })
                        </td>
                    </tr>
                }



            </table>
        </div>
        <!-- /.card-body -->
    </div>
</div>
