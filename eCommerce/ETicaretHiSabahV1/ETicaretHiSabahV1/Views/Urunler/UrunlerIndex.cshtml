@using  ETicaret.BLL
@{
    ViewBag.Title = "UrunlerIndex";
    Layout = "~/Views/Shared/AnasayfaLayout.cshtml";
    UrunManager urunMan = new UrunManager();
}
<!-- /new_arrivals -->
<div class="new_arrivals_agile_w3ls_info">
    <div class="container-fluid">
        <!--KATEGORİLER ALANI-->
        <div class="col-md-3">

            @Html.Partial("PartialKategori")
            @Html.Partial("PartialMarka")
        </div><!--KATEGORİLER ALANI END-->
        <!--ÜRÜNLER ALANI-->
        <div class="col-md-9">

            <h3 class="wthree_text_info"> <span>ÜRÜNLERİMİZ</span></h3>
            <div id="horizontalTab">

                @foreach (var item in urunMan.UrunListesi())
                {
                    <div class="col-md-3 product-men">
                        <div class="men-pro-item simpleCart_shelfItem">
                            <div class="men-thumb-item">
                                <img src="~/Template/images/b1.jpg" alt="" class="pro-image-front">
                                <img src="~/Template/images/m1.jpg" alt="" class="pro-image-back">
                                <div class="men-cart-pro">
                                    <div class="inner-men-cart-pro">
                                        <a href="/Urunler/UrunDetay/@item.UrunlerID" class="link-product-add-cart">Ürün Detay</a>
                                    </div>
                                </div>
                                <!-- <span class="product-new-top">New</span>-->
                            </div>
                            <div class="item-info-product ">
                                <h4><a href="/Urunler/UrunDetay/@item.UrunlerID">@item.UrunAdi</a></h4>
                                <div class="info-product-price">
                                    <span class="item_price">@item.UrunFiyat.Value.ToString("c")</span>
                                    <del>$69.71</del>
                                </div>
                                <h6><a href="single.html">@item.UrunAciklama</a></h6>
                                <!--**************************************************-->
                                <!--**************Ürünler için Sepete ekle-->
                                <div class="snipcart-details top_brand_home_details item_add single-item hvr-outline-out button2">
                                    @*<form action="#" method="post">*@
                                        <fieldset>
                                            <input type="hidden" name="cmd" value="_cart" />
                                            <input type="hidden" name="add" value="1" />
                                            <input type="hidden" name="business" value=" " />
                                            <input type="hidden" name="item_name" value="@item.UrunAdi" />
                                            <input type="hidden" name="amount" value="@item.UrunFiyat" />
                                            <input type="hidden" name="discount_amount" value="0" />
                                            <input type="hidden" name="currency_code" value="USD" />
                                            <input type="hidden" name="return" value=" " />
                                            <input type="hidden" name="cancel_return" value=" " />
                                            <input id="" urun_id="@item.UrunlerID" type="submit" name="submit" value="Sepete Ekle123" class="button urunSepeteEkle" />
                                        </fieldset>
                                    @*</form>*@
                                </div>
                                <!--**************Ürünler için Sepete ekle END-->
                                <!--**************************************************-->


                            </div>
                        </div>
                    </div>

                }


            </div>
        </div>
        <!--ÜRÜNLER ALANI END-->

    </div>
</div>
<!-- //new_arrivals -->
@section scripts{
<script>
    $('.urunSepeteEkle').on('click', function () {
        var sepeteatid = $(this).attr("urun_id");

        $.ajax({
            method: 'post',
            url: '@Url.Action("SepeteEkle","Sepet")' + "?UrunlerID=" + sepeteatid,
            success: function () {
                alert("Sepete Eklendi");
            },
            error: function () {
                alert("Eklenmedi, kontrol ediniz")
            }
        })
    });

    </script>
    
    }
